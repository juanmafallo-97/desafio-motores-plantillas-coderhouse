<h1>Productos</h1>
<div class="productos-container">
  {{#if hayProductos}}
    {{#each productos}}
      <div class="producto">
        <h2>{{this.title}}</h2>
        <h3>Precio: $ {{this.price}}</h3>
        <img src={{this.thumbnail}} />
      </div>
    {{/each}}
  {{else}}
    <h2>No hay productos</h2>
  {{/if}}
</div>